{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/telegram",
      "dest": "/api/telegram.py"
    },
    {
      "src": "/api/products",
      "dest": "/api/products.py"
    },
    {
      "src": "/",
      "dest": "/api/telegram.py"
    }
  ],
  "buildCommand": "pip install -r requirements.txt"
}